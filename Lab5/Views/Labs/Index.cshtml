@model Lab5.Models.LabViewModel

@{
    ViewData["Title"] = "Labs";
    string selectedLab = ViewData["SelectedLab"]?.ToString() ?? "Lab1";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Варіант 62 - Фурсенко Михайло</h1>

    <form method="post" id="labForm" asp-controller="Labs" asp-action="Index">
        <div class="mb-3">
            <label for="labSelector" class="form-label">Виберіть номер лаби</label>
            <select class="form-select" id="labSelector" name="LabSelector">
                <option value="Lab1" selected="@(selectedLab == "Lab1")">Lab 1 - поєднання двох вказаних імен в одне, в якому є обидва імені</option>
                <option value="Lab2" selected="@(selectedLab == "Lab2")">Lab 2 - сума елементів послідовності з вказаної кількості кроків</option>
                <option value="Lab3" selected="@(selectedLab == "Lab3")">Lab 3 - алгоритм який як у грі Zuma за найкоротшу кількість кроків знищує усі букви</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="inputText" class="form-label">Введіть дані</label>
            <textarea id="inputText" class="form-control" name="InputText" rows="8">@Model.InputText</textarea>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-lg">Виконати</button>
        </div>
    </form>

    <div class="mt-4">
        <h4 class="mb-3">Результат</h4>
        <textarea id="outputText" class="form-control" name="OutputText" rows="4" readonly>@Model.OutputText</textarea>
    </div>
</div>